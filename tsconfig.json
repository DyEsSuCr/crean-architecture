{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@infrastructure/*": [
        "infrastructure/*"
      ],
      "@application/*": [
        "application/*"
      ],
      "@domain/*": [
        "domain/*"
      ]
    }
  }
}